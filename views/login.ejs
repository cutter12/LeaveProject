<%- include ('partials/header.ejs') %>
<nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
    <div class="container">
        <a class="navbar-brand" href="#">LEAVEONLINE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Login</a>
                </li>
            </ul>

        </div>
    </div>
</nav>
<div>
<main class="login-form" id="vue_login">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <form action="/login" method="post">
                            <div class="form-group row">
                           
                                <div class="col-md-6 mx-auto">
                                    <input type="text" id="email_address" class="form-control" name="emp_id" placeholder="รหัสพนักงาน" v-on:focusout="focusoutAlert()" v-model="text" maxlength="4">
                                </div>
                            </div>
                            <div class="form-group row">
                            <div class="col-md-6 mx-auto">
                                    <input type="date" name="birth_date" id="" class="form-control" maxlength="8" required >
                                </div>
                            </div>
                            <div class="form-group row">
                            <div class="col-md-6 mx-auto text-center">
                                <input type="radio" name="isPosition" id=""  value="officer" v-bind:disabled="emp_disable" v-bind:checked="emp_checked"  required><span> Officer</span>
                                <input type="radio" name="isPosition" id=""  value="manager" v-bind:disabled="mg_disable"  v-bind:checked="mg_checked" required><span> Manager</span>
                                </div>
                            </div>

                            <div class="col-md-6 mx-auto text-right">
                                <button type="submit" class="btn btn-primary btn-lg mx-auto" v-on:keyup.enter="submit">
                                    Login
                                </button>
                                
                                
                                
                            </div>
                            <div class="col-md-6 mx-auto mt-1">
                                <% if(log_check.error){ %>
                                    <div class="alert alert-danger"><%= log_check.error%></div>
                                <% } %>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>

</div>
<%- include ('partials/footer.ejs') %>



