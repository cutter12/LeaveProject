<%- include ('partials/header.ejs') %>
<div class="container">
    <div class="row mt-2">
        <div class="col-md-12">
            <% if(!msg.success){ %>
                
            <form action="/upload" enctype="multipart/form-data" method="post">
                <div class="form-group">
                  <label for="exampleFormControlFile1">อัพโหลดไฟล์ภาพ</label>
                  <input type="file" class="form-control-file" id="exampleFormControlFile1" name="myImage" required><input type="submit" value="Upload" class="btn btn-success mt-1">
                  <label class="m-1 text-success">อัปโหลดไฟล์ jpg, png, pdf, gif ขนาดไม่เกิน 2 MB</label>
                  <br>
                  <% if(msg.failed){ %>
                    <span class="alert alert-danger mt-1"><%= msg.failed %></span>
                  <% } %>
                </div>
              </form>
            <% }else{ %>
                <h5 class="alert alert-success mt-5">อัพโหลดภาพเรียบร้อย</h5>
            <% } %>
        </div>
    </div>
</div>




